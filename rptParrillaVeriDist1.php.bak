				$respCantProd=mysql_query($sqlCantProd);
				if(mysql_num_rows($respCantProd)==0){
					$cantProd=0;
				}else{
					$cantProd=mysql_result($respCantProd,0,0);
				}
				echo "<th>$cantProd</th><th></th><th></th>";
			}
		}
